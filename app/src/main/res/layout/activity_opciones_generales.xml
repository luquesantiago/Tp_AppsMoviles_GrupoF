<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewmodel.Opciones_Generales"
    android:orientation="vertical"



    >

  <include
      android:id="@+id/toolbar"
      layout="@layout/toolbar_layout" />



  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="16dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Bienvenido "
        android:textColor="@color/white"
        android:background="@color/azulPrimario"

        />

    <TextView
        android:id="@+id/idUsuarioMostrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/azulPrimario"


        />
  </LinearLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btnListaStock"
    android:text="Lista de Productos"
    android:textSize="20dp"
    android:layout_marginHorizontal="40dp"


    />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btnListaPeliculas"
      android:text="Lista de Peliculas"
      android:textSize="20dp"
      android:layout_marginHorizontal="40dp"


      />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btnPelisCompradas"
      android:text="Peliculas Compradas"
      android:textSize="20dp"
      android:layout_marginHorizontal="40dp"/>



  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btnCerrarSesion"
      android:text="Cerrar Sesion"
      android:textSize="20dp"
      android:layout_marginHorizontal="40dp"


      />







  </LinearLayout>